<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Rashid Hussain"
        android:inputType="textCapWords"
        android:key="user_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="rashidhussain@mail.com"
        android:inputType="textEmailAddress"
        android:key="user_email"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Email" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_reports_titles"
        android:entryValues="@array/pref_reports_values"
        android:key="report_schedule"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Reports" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_unit_titles"
        android:entryValues="@array/pref_unit_values"
        android:key="unit_value"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Units" />

</PreferenceScreen>
