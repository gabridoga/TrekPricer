<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_foot_gps_frequency_titles"
        android:entryValues="@array/pref_foot_gps_frequency_values"
        android:key="foot_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="On Foot GPS Frequency" />

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_bike_gps_frequency_titles"
        android:entryValues="@array/pref_bike_gps_frequency_values"
        android:key="bike_frequency"
        android:negativeButtonText="Cancel"
        android:positiveButtonText="@null"
        android:title="Bike GPS Frequency" />

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_shared_gps_frequency_titles"
        android:entryValues="@array/pref_shared_gps_frequency_values"
        android:key="shared_frequency"
        android:negativeButtonText="Cancel"
        android:positiveButtonText="@null"
        android:title="Shared GPS Frequency" />

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_car_gps_frequency_titles"
        android:entryValues="@array/pref_car_gps_frequency_values"
        android:key="car_frequency"
        android:negativeButtonText="Cancel"
        android:positiveButtonText="@null"
        android:title="Car GPS Frequency" />


</PreferenceScreen>
