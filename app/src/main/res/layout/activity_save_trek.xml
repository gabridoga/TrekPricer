<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_save_trek"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFFFFF"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/trek_toolbar"
        android:background="@color/main_color_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="10.0dp"
        android:textColor="@color/black"
        android:textSize="18.0sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="Trek Name"/>

    <EditText
        android:id="@+id/edittext_trek_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:textColor="#000"
        android:visibility="gone"
        android:hint="Walk on 10/7/16"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:textColor="@color/black"
        android:textSize="18.0sp"
        android:textStyle="bold"
        android:text="Trek Mode"/>

    <TextView
        android:id="@+id/text_trek_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:text="Walking"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_marginTop="10.0dp"
        android:layout_marginRight="5.0dp"
        android:background="#A0A0A0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_trek_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DISTANCE (km) "
                    android:textColor="#000" />


            </LinearLayout>



            <View
                android:layout_width="1.0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.0dp"
                android:background="#A0A0A0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_trek_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DURATION"
                    android:gravity="center"
                    android:textColor="#000" />


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="0.0dp"
            android:background="#A0A0A0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_trek_max_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MAX SPEED (km/h) "
                    android:textColor="#000" />


            </LinearLayout>



            <View
                android:layout_width="1.0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.0dp"
                android:background="#A0A0A0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_trek_avg_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AVG SPEED (km/h)"
                    android:gravity="center"
                    android:textColor="#000" />

            </LinearLayout>


        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_margin="0.0dp"
        android:background="#A0A0A0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_trek_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.0"
                android:background="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="COST (USD) "
                android:textColor="#000" />


        </LinearLayout>

        <View
            android:layout_width="1.0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.0dp"
            android:background="#A0A0A0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_trek_saving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVINGS (USD)"
                android:gravity="center"
                android:textColor="#000" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_margin="0.0dp"
        android:background="#A0A0A0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10.0dp"
        android:visibility="gone"
        android:weightSum="2">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_discard_trek"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DISCARD TREK"
            android:textColor="#FFF"
            android:background="#A0A0A0" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_save_trek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE TREK"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:background="#66cc00" />


    </LinearLayout>



</LinearLayout>
